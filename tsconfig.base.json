{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    // emitDecoratorMetadata and experimentalDecorators have to be true for routing-controllers to work
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
