{
  "name": "auth-core-api",
  "version": "0.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "prepare": "node .husky/install.mjs",
    "dev": "NODE_ENV=development nodemon src/server.ts",
    "preview": "npm run build && NODE_ENV=development node dist/server.js",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "build": "npm run clean:dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "clean": "npm run clean:dist && npm run clean:node_modules",
    "clean:dist": "rm -rf dist",
    "clean:node_modules": "rm -rf node_modules",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write \"**/*.{ts,js,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md,yml,yaml}\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chen7david/auth-core-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/chen7david/auth-core-api/issues"
  },
  "homepage": "https://github.com/chen7david/auth-core-api#readme",
  "devDependencies": {
    "@faker-js/faker": "^9.8.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.4.0",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
