{
  "name": "entix-api",
  "version": "0.0.0",
  "main": "index.js",
  "type": "commonjs",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=dev nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "test": "cross-env NODE_ENV=test jest",
    "start": "cross-env NODE_ENV=prod node dist/server.js",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "build": "rimraf dist && tsc -p tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "format": "prettier --write .",
    "lint": "eslint --max-warnings=100 src",
    "lint:fix": "eslint --max-warnings=100 src --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chen7david/entix-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chen7david/entix-api/issues"
  },
  "homepage": "https://github.com/chen7david/entix-api#readme",
  "description": "",
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.15",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.11.2",
    "zod": "^3.24.3"
  }
}
