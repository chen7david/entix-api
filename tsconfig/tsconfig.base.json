{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "rootDir": "../src",
    "outDir": "../dist"
  },
  "include": ["../src/**/*"],
  "exclude": ["../node_modules", "../dist"]
}
